    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno Debug (Allow All)",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": ["run", "--inspect-brk", "-A", "${file}"],
            "console": "integratedTerminal",
            "attachSimplePort": 9229
        }
    ]
}